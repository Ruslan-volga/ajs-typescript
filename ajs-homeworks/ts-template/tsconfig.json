{
  "compilerOptions": {
    /* Основные настройки */
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Настройки путей */
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    /* Поддержка JSX (если нужно) */
    // "jsx": "react",
    /* Дополнительные проверки */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    /* Настройки для Webpack */
    "allowJs": true,
    "sourceMap": true,
    "declaration": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}